<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tile_inventory"
    android:orientation="horizontal"
    android:background="@drawable/style_inventory_tile"
    android:layout_marginVertical="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/inventorylist_img"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>


        <EditText
            android:id="@+id/inventory_title_edittext"
            style="@style/tileTV"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="8"
            android:layout_marginStart="20dp"
            android:text="@string/label_sampleinventorytitle"
            android:hint="Title"
            android:focusedByDefault="false"
            android:backgroundTint="@color/tile_color"
            />


        <ImageButton
            android:id="@+id/inv_edit_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit_default"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitCenter"
            app:tint="@color/tile_color"
            />

        <ImageButton
            android:id="@+id/inv_delete_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_delete_default"
            android:scaleType="fitCenter"
            app:tint="@color/tile_color"
            android:layout_marginEnd="20dp"
            />

        <ImageButton
            android:id="@+id/inv_reorder_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_reorder_default"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            />



</LinearLayout>