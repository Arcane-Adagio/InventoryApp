<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tile_inventory"
    android:orientation="horizontal"
    android:background="@drawable/style_inventory_tile"
    android:layout_marginVertical="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/user_img"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/userName_tv"
            style="@style/tileTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/label_sampleinventorytitle"
            android:focusedByDefault="false"
            android:backgroundTint="@color/tile_color"
            />

        <TextView
            android:id="@+id/userID_tv"
            style="@style/tileTV"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:text="@string/label_sampleinventorytitle"
            android:focusedByDefault="false"
            android:backgroundTint="@color/tile_color"
            />
    </LinearLayout>




    <ImageButton
        android:id="@+id/inv_remove_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:layout_marginVertical="3dp"
        android:src="@drawable/ic_removemember_default"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitCenter"
        app:tint="@color/tile_color"
        />




</LinearLayout>