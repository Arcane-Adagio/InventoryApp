<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="loginEditText" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="fontFamily">@font/worksans</item>
    </style>

    <style name="headerText" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:breakStrategy">balanced</item>
    </style>

    <style name="tileTV" parent="TextAppearance.AppCompat">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLength">40</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/tile_color</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="labelText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="floatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="tint">@color/onSecondaryColor</item>
    </style>

    <style name="primaryFAB" parent="floatingActionButton">
    </style>

    <style name="secondaryFAB" parent="floatingActionButton">

    </style>


    <style name="basicEditText" parent="TextAppearance.AppCompat">
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/worksans</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="tileEditText" parent="basicEditText">
        <item name="android:textColor">@color/tile_color</item>
        <item name="android:backgroundTint">@color/tile_color</item>
        <item name="android:textColorHint">@color/tile_color</item>
    </style>

    <style name="basicText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/worksans_regular</item>
    </style>

    <style name="basicWhiteText" parent="basicText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="menuTheme" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:popupBackground">@color/primaryDarkColor</item>
    </style>

</resources>