<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dlog_background"
    >

    <TextView
        android:id="@+id/textview_renameInventory"
        style="@style/basicWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Rename Inventory"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_renameInventory"
        style="@style/tileEditText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:maxHeight="40dp"
        android:textSize="12sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:hint="New Inventory Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_renameInventory" />

    <Button
        android:id="@+id/btn_renameInventory_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:maxWidth="70dp"
        android:maxHeight="40dp"
        android:minWidth="65dp"
        android:minHeight="35dp"
        android:padding="5dp"
        android:text="@string/btn_cancel"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_renameInventory_submit"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_renameInventory_submit"
        app:layout_constraintVertical_bias="0.0"

        android:textColor="@color/tile_color"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        android:stateListAnimator="@null"
        />

    <Button
        android:id="@+id/btn_renameInventory_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="70dp"
        android:layout_marginTop="10dp"
        android:maxHeight="40dp"
        android:minWidth="65dp"
        android:minHeight="35dp"
        android:backgroundTint="@color/primaryDarkColor"
        android:padding="5dp"
        android:text="@string/btn_submit"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/edittext_renameInventory"
        app:layout_constraintTop_toBottomOf="@+id/edittext_renameInventory" />

</androidx.constraintlayout.widget.ConstraintLayout>